{
 "background": {
    "page": "background.html"
  },
          "browser_action": {
      "default_icon": "loggedout.png",
      "default_popup": "popup.html"
   },
    
	"content_scripts": [ {
		"js": [ "content/overlay.js"],
		"matches": [ "https://www.assembla.com/*"],
		"run_at": "document_end"
   } ],

